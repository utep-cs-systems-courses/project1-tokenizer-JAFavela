# compiler flags.  -g for debug, -O3 for optimization

CFLAGS=-g -O3



# first target is built by default

all: tokenYzer



# include file dependencies

tokenizer.o: tokenizer.h

history.o: history.h

mainUI.o: history.h tokenizer.h

# $@=target, $^=prerequisites

tokenYzer: tokenizer.o history.o mainUI.o

	cc -o $@ $^ $(CFLAGS)

# deletes files generated by compilation and emacs autosave

clean:
	rm -f *.o *~ tokenYzer

# runs program
run:
	rm -f *.o *~
	./tokenYzer

# cleans, compiles and runs program
auto: clean tokenYzer run
